# .swiftformat - Opinionated rules for g-cqd projects
# Aligned with SwiftProjectKit configuration

--swiftversion 6.2

# File options
# Large files excluded due to organizeDeclarations timeout
--exclude .build,.swiftpm,Package.swift,DerivedData,Plugins
--exclude Sources/SwiftStaticAnalysisCore/Visitors/DeclarationCollector.swift
--exclude Sources/UnusedCodeDetector/DataFlow/SCCPAnalysis.swift
--exclude Sources/UnusedCodeDetector/DataFlow/CFGBuilder.swift

# Formatting rules
--allman false
--binarygrouping 4,8
--commas always
--decimalgrouping 3,6
--exponentcase lowercase
--exponentgrouping disabled
--fractiongrouping disabled
--header ignore
--hexgrouping 4,8
--hexliteralcase uppercase
--ifdef indent
--importgrouping testable-last
--indent 4
--indentcase false
--linebreaks lf
--maxwidth 120
--octalgrouping 4,8
--operatorfunc spaced
--patternlet hoist
--ranges spaced
--self remove
--semicolons inline
--stripunusedargs closure-only
--tabwidth 4
--trailingclosures
--trimwhitespace always
--wraparguments preserve
--wrapparameters preserve
--wrapcollections preserve

# Rules - Enable
--enable blankLineAfterImports
--enable isEmpty
--enable markTypes
--enable organizeDeclarations
--enable sortSwitchCases
--enable wrapEnumCases
--enable wrapSwitchCases

# Rules - Disable
--disable acronyms
--disable redundantOptionalBinding
--disable wrapMultilineStatementBraces
